{
  "name": "valoskins",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt-ts",
    "build": "nuxt-ts build --target static",
    "export": "nuxt-ts export",
    "generate": "nuxt-ts build --target static && nuxt-ts export",
    "serve": "nuxt-ts serve",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:fix": "yarn lint:js --fix && yarn lint:style --fix"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
    "*.{css,vue}": "stylelint **/*.{vue,css} --ignore-path .gitignore --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxt/typescript-build": "^2.0",
    "@nuxt/typescript-runtime": "^1.0",
    "@nuxtjs/dotenv": "^1.4",
    "@nuxtjs/pwa": "^3.0.0-beta.20",
    "@nuxtjs/strapi": "^0.1",
    "@nuxtjs/stylelint-module": "^4.0",
    "@nuxtjs/svg": "^0.1",
    "@nuxtjs/tailwindcss": "^2.1",
    "@types/lodash-es": "^4.17",
    "lodash-es": "^4.17",
    "nuxt": "^2.14",
    "postcss-color-mod-function": "^3.0",
    "postcss-comment": "^2.0",
    "postcss-custom-properties": "^9.1",
    "postcss-nested": "^4.2"
  },
  "devDependencies": {
    "@nuxt/types": "^2.14",
    "@nuxtjs/eslint-config-typescript": "^3.0",
    "@nuxtjs/eslint-module": "^2.0",
    "babel-eslint": "^10.1",
    "eslint": "^7.5",
    "eslint-config-prettier": "^6.11",
    "eslint-plugin-nuxt": "^1.0",
    "husky": "^4.2",
    "lint-staged": "^10.2",
    "prettier": "^2.0",
    "stylelint": "^13.6",
    "stylelint-config-standard": "^20.0"
  }
}
