{
  "name": "valoskins",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build --target static",
    "generate": "cross-env NODE_ENV=production nuxt generate",
    "serve": "nuxt serve",
    "lint:js": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.{vue,css} --ignore-path .gitignore",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:fix": "yarn lint:js --fix && yarn lint:style --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,vue}": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
    "*.{css,vue}": "stylelint **/*.{vue,css} --ignore-path .gitignore --fix"
  },
  "dependencies": {
    "@nuxt/typescript-build": "^2.1",
    "@nuxtjs/dotenv": "^1.4",
    "@nuxtjs/pwa": "^3.3",
    "@nuxtjs/strapi": "^0.3",
    "@nuxtjs/stylelint-module": "^4.0",
    "@nuxtjs/svg": "^0.1",
    "@types/lodash-es": "^4.17",
    "hint.css": "^2.6",
    "hover.css": "^2.3",
    "lodash-es": "^4.17",
    "nuxt": "^2.15",
    "nuxt-i18n": "^6.27",
    "postcss-color-mod-function": "^3.0",
    "postcss-comment": "^2.0",
    "postcss-custom-media": "^7.0",
    "postcss-custom-properties": "^9.2",
    "postcss-nested": "^4.2",
    "reset-css": "^5.0"
  },
  "devDependencies": {
    "@nuxt/types": "^2.15",
    "@nuxt/typescript-build": "^2.1",
    "@nuxtjs/eslint-config": "^6.0",
    "@nuxtjs/eslint-config-typescript": "^6.0",
    "@nuxtjs/eslint-module": "^3.0",
    "babel-eslint": "^10.1",
    "cross-env": "^7.0",
    "cz-conventional-changelog": "^3.3",
    "eslint": "^7.28",
    "eslint-config-prettier": "^8.3",
    "eslint-plugin-nuxt": "^2.0",
    "husky": "^6.0",
    "lint-staged": "^11.0",
    "prettier": "^2.3",
    "stylelint": "^13.13",
    "stylelint-config-standard": "^22.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
